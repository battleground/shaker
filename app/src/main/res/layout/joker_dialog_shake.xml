<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="256dp"
            android:layout_height="166dp"
            android:background="@drawable/ic_dialog_scanning_shake_background"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="21dp"
            android:text="摇一摇"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="9dp"
            android:text="可快速进入轮播频道互动"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/close"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_dialog_scanning_shake_button"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onBack"
            android:padding="13.4dp"
            android:text="我知道了"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
